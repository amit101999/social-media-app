<link rel="stylesheet" href="<%= assetPath('css/chat.css') %>" />
<% if (locals.user){ %>
<div class="chat-page">
  <div id="user-chat-box">
    <div id="chat-messages-list">
      <p class="other-message">
        <span>hello my name is amit</span>
      </p>
      <p class="self-message">
        <span> hello my name is atul </span>
      </p>
    </div>
    <div id="chat-message-input-container">
      <input id="chat-message-input" placeholder="Type message here" />
      <button id="send-message">Send</button>
    </div>
  </div>
  <% }else{ %>
    <h2>
      Please Login to use this feature!!
    </h2>
    <% }%>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.0/socket.io.js"></script>
<script src="<%= assetPath('js/chat_engine.js') %> "></script>
<% if (locals.user) { %>
<script>
  new chatEngine("user-chat-box", "<%= locals.user.email %>");
</script>
  <% } %>
