<!-- this page will be render in the body tag of the layouts.ejs -->
<!-- link is here also we can metion the script tag in last  -->
<link rel="stylesheet" href="/css/home.css" />
<div class="home">
  <section id="feed-posts">
    <p>Time Line</p>
    <% if(locals.user){ %>
    <form action="/posts/create" id="new-form-post" method="POST">
      <div class="textarea">
        <textarea
          name="content"
          id=""
          rows="2"
          required
          placeholder="Write Something here!"
        ></textarea>
      </div>
      <input type="submit" value="Submit" />
    </form>
    <% }%>
  </section>

  <section class="main">
    <section>
      <div id="post-list-container">
        sadsa
        <ul>
          <% for( item of posts){ %>
          <!-- if user is logged in and the current user is the one who is deleting their post not someone else is deting post -->
          <%- include('_post') %> <% } %>
        </ul>
      </div>
    </section>

    <section id="user-friends">
      <h4>friends</h4>
      <% for(u of users){ %>
      <p>
        <a href="/user/profile/<%= u.id %>"><%= u.name %></a>
      </p>

      <%} %>
    </section>
  </section>
</div>
