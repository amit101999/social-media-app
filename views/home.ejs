<link rel="stylesheet"  href="<%= assetPath('css/home.css') %>"/>
<div class="timeline">
  <section class="main">
    <% if(locals.user){ %>
    <h2 id="user-tag">Time Line</h2>
    <section id="feed-posts">
      <form action="/posts/create" id="new-post-form" method="POST">
        <div class="textarea">
          <textarea
            name="content"
            rows="5"
            required
            placeholder="Write Something here!"
          ></textarea>
        </div>
        <div id="post-submit">
          <input type="submit" value="Share Your Thoughts" />
        </div>
      </form>
      <% }%>
    </section>
    <section id="posts-list-container">
      <ul>
        <% for( post of posts){ %>
        <!-- if user is logged in and the current user is the one who is deleting their post not someone else is deting post -->
        <%- include('_post') %> <% } %>
      </ul>
    </section>
  </section>

  <section id="user-friends">
    <h4>friends</h4>
    <div>
    <% for(u of users){ %>
      <p>
        *<a href="/user/profile/<%= u.id %>"><%= u.name %></a>
      </p>
      <%} %>

    </div>

  </section>
  <section></section>
</div>
<script src="<%= assetPath('js/toggle_likes.js') %>"></script>
<script src="<%= assetPath('js/comments.js') %> "></script>
<script src="<%= assetPath('js/home_posts.js') %>"></script>
